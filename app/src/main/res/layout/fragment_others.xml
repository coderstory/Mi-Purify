<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    skin:enable="true">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="ca-app-pub-2121887088795026/2753680028">
    </com.google.android.gms.ads.AdView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:skin="http://schemas.android.com/android/skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="40dp"
                android:text="@string/MIUI_Purify" />

            <Switch
                android:id="@+id/enableBlockAD"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:maxLines="10"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/enableBlockADS" />


            <Switch
                android:id="@+id/enableMMS"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/mms" />

            <Switch
                android:id="@+id/enableDownload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/downloadexplorer" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="40dp"
                android:text="@string/corepatch" />

            <Switch
                android:id="@+id/downgrade"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/downgr" />

            <Switch
                android:id="@+id/signatureCheck"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/signatureCheck" />

            <Switch
                android:id="@+id/comparisonSignature"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/comparisonSignature" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:paddingEnd="40dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:text="@string/xposedmodule" />

            <Switch
                android:id="@+id/hide_icon_label"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/hide_icon_label" />


            <Switch
                android:id="@+id/prevent_freeze_reverse"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/prevent_freeze_reverse" />

            <Switch
                android:id="@+id/lowBatteryWarning"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/lowBatteryWarning" />


            <Switch
                android:id="@+id/alarmClockIcon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/alarmClockIcon" />

            <Switch
                android:id="@+id/noBatteryWarning"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/noBatteryWarning" />

            <Switch
                android:id="@+id/default_store"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/default_store" />

            <Switch
                android:id="@+id/hideNetworkSpeed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/switchBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/hideNetworkSpeed" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>